<script type="text/javascript">
  $(document).ready(function() {

     var src=document.getElementById("src" +0).value;
      var name=document.getElementById("name" +0).value;
      var desc=document.getElementById("desc" +0).value;
      var time=document.getElementById("time" +0).value;
      var prize= document.getElementById("prize" +0).value;
      var challengeID= document.getElementById("id"+0).value;
      $("#nameBanner").html(name);
      $("#descBanner").html(desc);
      $("#timeBanner").text("Comienza en: "+time);
      $("#prizeBanner").html("<i class='fa fa-trophy' aria-hidden='true' style='color:ffb327;height:1vh;margin-right:0.5vw;'></i>"+prize);
      $("#imgBanner").attr("src",src);
      $('#buttonCard').val(challengeID);
      $('#submitButton').val(challengeID);

 
    var len = document.getElementById("lengthData").value;
    $("#message").hide();
    
    $(".anchorCard").click(function(e) {
      var clicked_value=$(this).data("value");
      $('#id_store').val(clicked_value);

      $('#joinForm').submit();
    });


    $(".buttonCardTransparent").hide();

    for (var i = 0; i < len; i++) {

      var time = document.getElementById("timeLeft" + i).innerText;
      var countDownDate = new Date(time).getTime();
      var x = timer("timeLeft" + i, countDownDate);
      myFunction("cal" + i, time)
    }

    function timer(id, countDownDate) {
      setInterval(function() {
        var now = new Date(moment.tz(new Date(), "GMT").utcOffset(-300).format("DD-MM-YYYY hh:mm:ss a")).getTime();
        var distance = countDownDate - now;
        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if(days===0){
          $('#'+id).css("background-color", "tomato");
          document.getElementById(id).innerHTML =  hours + "H " + minutes + "M " + seconds + "S ";
        }
        else if(days>=1){
          document.getElementById(id).innerHTML =  "en "+days+" DÃ­as"
        }
        else {
          $('#'+id).css("background-color", "black");
          document.getElementById(id).innerHTML = "EXPIRED";
        }
      }, 1000);
    }

    function myFunction(id, time) {
      
      var weekday = new Array(7);
      weekday[0] = "Sunday";
      weekday[1] = "Monday";
      weekday[2] = "Tuesday";
      weekday[3] = "Wednesday";
      weekday[4] = "Thursday";
      weekday[5] = "Friday";
      weekday[6] = "Saturday";
      var n = weekday[new Date(time).getDay()];
      var months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
     
      var ti=time.split(" ");
      var timeString = ti[1];
      var H = +timeString.substr(0, 2);
      var h = (H % 12) || 12;
      var ampm = H < 12 ? " AM" : " PM";
      timeString = h + timeString.substr(2, 3) + ampm;
     document.getElementById(id).innerHTML = '<i class="fa fa-calendar" aria-hidden="true" style="margin-top:2.5px; margin-right:0.5vw;"></i>'+ n.substring(0, 3) + ", " + months[new Date(time).getMonth()].substring(0, 3) + " " + new Date(time).getDate() + " " + '<i class="fa fa-clock-o" aria-hidden="true" style="margin-top:3.5px; margin-right:0.5vw;margin-left:0.5vw;"></i>'+" "+timeString;
    };

  });
</script>



