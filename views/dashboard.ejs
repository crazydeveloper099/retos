<%- include('partials/header') %>



<div class="jumbotron jumbotron-fluid" style="background-color:transparent; text-align:center;">
  <div class="container">
    <h1 style="color:white;" class="display-4">RETOS DISPONIBLES</h1>
  </div>
</div>
<div id="demo" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->


  <!-- The slideshow -->
  <form action="/challenge" name="search-form" id="search-form" >

  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="container">
        <div class="row align-items-center" style="text-align:center">
        <% data.slice(0,3).map(datai =>{ %>
          <div onClick="document.forms['search-form'].submit();" class="col-md-6 col-sm-6 col-lg-4 cardModified"  style="margin:0px;">
          <img style="border-radius:10px" class="card_image"
            src=https://sweepwidget.com/<%=datai.src%>.thumb_600_width.jpg>
        <div class="textStyle" style="color:#00c400; font-size:1.2rem;   font-weight: bold;">
          <%= datai.challengeName %>
          </div>
          <div class="textStyle" style="color:white;   margin-top: 2px;">
            ID: <%= datai.challengeId %>
          </div>
          <div class="textStyle" style="color:white;   margin-top: 2px;">
            Status: <%= datai.challengeType %>
          </div>
            <div class="textStyle" style="color:white;   margin-top: 2px;">
        <%= datai.challengeTime %>
        </div>
          </div>
      <% }) %>
      </div>
  </div>
    </div>

    <% for (i = 1; i < ((data.length-3)/3)+1; i++) { %>
    <div class="carousel-item">
      <div class="container">
        <div class="row align-items-center" style="text-align:center">

        <% data.slice(3*i,(3*i)+3).map(datai =>{ %>
          <div onClick="document.forms['search-form'].submit();" class="col-md-6 col-sm-6 col-lg-4 cardModified"   style="margin:0px;">
            <img style="border-radius:10px" class="card_image"
              src=https://sweepwidget.com/<%=datai.src%>.thumb_600_width.jpg>
          <div class="textStyle" style="color:#00c400; font-size:1.2rem;   font-weight: bold;">
            <%= datai.challengeName %>
            </div>
            <div class="textStyle" style="color:white;   margin-top: 2px;">
              ID: <%= datai.challengeId %>
            </div>
            <div class="textStyle" style="color:white;   margin-top: 2px;">
              Status: <%= datai.challengeType %>
            </div>
              <div class="textStyle" style="color:white;   margin-top: 2px;">
          <%= datai.challengeTime %>
          </div>
          </div>

      <% }) %>
      </div>
  </div>
    </div>
    <% } %>
  </div>
  </form>
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>
