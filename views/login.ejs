<%- include('partials/login_header.ejs') %>

<div class="login-wrap">
  <form class="" action="/login" method="post">


	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab" style="color:#FFFFFF;">Iniciar sesión</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="color:#FFFFFF;">Regístrate</label>
		<div class="login-form">
			<div class="sign-in-htm">
				<div class="group">
					<label for="user" class="label">Email</label>
					<input name="email" id="user" type="text" class="input">
				</div>
				<div class="group">
					<label for="pass" class="label">Contraseña </label>
					<input id="pass"  name="password" type="password" class="input" data-type="password">
				</div>
				<div class="group">
					<input id="check" type="checkbox" name="check" class="check" checked>
					<label for="check"><span class="icon"></span> Mantenerme conectado</label>
				</div>
				<div class="group">
					<input type="submit" class="button" value="Inicia sesión">
				</div>
				<div class="foot-lnk" style="margin-top:20px;">
					<a href="/forgetPassword">¿Se te olvidó tu contraseña?</a>
				</div>
			</div>
      </form>
      <form class="" action="/signup" method="post">
			<div class="sign-up-htm">
        <div class="group">
          <label for="pass" class="label">Full Name</label>
          <input id="pass" name="name" type="text" class="input" >
        </div>
				<div class="group">
					<label for="user" class="label">Email</label>
					<input id="user" name="email" type="text" class="input">
				</div>
        <div class="group">
          <label for="user" class="label">Phone</label>
          <input id="user" name="phone" type="text" class="input">
        </div>
        <div class="group">
					<label for="pass" class="label">Contraseña</label>
					<input id="pass" name="password" type="password" class="input" data-type="password">
				</div>
				<div class="group">
					<input type="submit" class="button" value="Regístrate">
				</div>
			</div>
      </form>
		</div>
